@model IEnumerable<Car>

<h2>@ViewBag.Title</h2>

<section id="cars-list" class="container">
    <div class="row">
        @foreach (var car in Model)
        {
            <div class="car-info-panel thumbnail col-md-5">
                <div class="caption">
                    <h2 id="make">
                        <strong>@Html.DisplayFor(c => car.Manufacturer)</strong>
                    </h2>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-md-4">
                                    @Html.DisplayNameFor(model => model.Model):
                                </div>
                                <div class="col-md-8">
                                    <strong>
                                        @Html.DisplayFor(c => car.Model)
                                    </strong>
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-md-4">
                                    @Html.DisplayNameFor(model => model.Year):
                                </div>
                                <div class="col-md-8">
                                    <strong>
                                        @Html.DisplayFor(c => car.Year)
                                    </strong>
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-md-4">
                                    @Html.DisplayNameFor(model => model.VIN):
                                </div>
                                <div class="col-md-8">
                                    <strong>
                                        @Html.DisplayFor(c => car.VIN)
                                    </strong>
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-md-4">
                                    @Html.DisplayNameFor(model => model.EngineCode):
                                </div>
                                <div class="col-md-8">
                                    <strong>
                                        @Html.DisplayFor(c => car.EngineCode)
                                    </strong>
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-md-4">
                                    @Html.DisplayNameFor(model => model.FuelType):
                                </div>
                                <div class="col-md-8">
                                    <strong>
                                        @Html.DisplayFor(c => car.FuelType)
                                    </strong>
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-md-4">
                                    @Html.DisplayNameFor(model => model.PlateCode):
                                </div>
                                <div class="col-md-8">
                                    <strong>
                                        @Html.DisplayFor(c => car.PlateCode)
                                    </strong>
                                </div>
                            </div>
                        </li>
                    </ul>
                    <div>
                        @Html.ActionLink("Edit", "Edit",
                            new { customerId = ViewBag.CustomerId, carId = car.CarId }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Details", "Details",
                            new { customerId = ViewBag.CustomerId, carId = car.CarId }, new { @class = "btn btn-info" })
                        @Html.ActionLink("View Jobs", "Index", "Jobs",
                            new { customerId = ViewBag.CustomerId, carId = car.CarId }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Delete", "Delete",
                            new { customerId = ViewBag.CustomerId, carId = car.CarId }, new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        }
    </div>
</section>
<div class="row text-right">
    @Html.ActionLink("Add a new car", "Create",
        new { customerId = ViewBag.CustomerId }, new { @class = "btn btn-primary" })
</div>