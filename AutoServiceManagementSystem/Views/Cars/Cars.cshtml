@model IEnumerable<AutoServiceManagementSystem.ViewModels.Cars.DisplayCarViewModel>

<h2>@ViewBag.Title</h2>

<section id="cars-list" class="container-fluid">
    <div class="row">
        @if (Model.Count() == 0)
        {
            <h4>This customer doesn't have any cars added yet.</h4>
        }
        @Html.DisplayFor(cars => cars)
    </div>
</section>
<div class="clearfix"></div>
<div class="row text-right">
    @Html.ActionLink("Add a new car", "Create",
        new { customerId = ViewBag.CustomerId }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Back", "Index", "Customers", null, 
        new { @class = "btn btn-default" })
</div>