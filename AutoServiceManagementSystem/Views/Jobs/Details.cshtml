@model Job

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
    <hr />
<div class="row">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(j => j.Mileage)
            </div>
            <div class="col-md-6">
                @Html.Encode(Model.Mileage.ToString("### ### ### km"))
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(j => j.Description)
            </div>
            <div class="col-md-6">
                @Html.DisplayFor(j => j.Description)
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(j => j.DateStarted)
            </div>
            <div class="col-md-6">
                @Html.DisplayFor(j => j.DateStarted)
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(j => j.DateFinished)
            </div>
            <div class="col-md-6">
                @if (Model.DateFinished == null)
                {
                    <b>-</b>
                }
                @Html.DisplayFor(j => j.DateFinished)
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(j => j.IsFinished)
            </div>
            <div class="col-md-6">
                @Html.DisplayFor(j => j.IsFinished)
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(j => j.IsPaid)
            </div>
            <div class="col-md-6">
                @Html.DisplayFor(j => j.IsPaid)
            </div>
        </div>
    </div>
    <hr />
    <h4>Spare Parts</h4>
    <table class="table table-striped table-hover col-md-12">
        <thead>
            <tr>
                <th>Name</th>
                <th>OEM Code</th>
                <th>Supplier</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @Html.DisplayFor(j => j.SpareParts)
        </tbody>
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", "Jobs",
                new { customerId = ViewBag.CustomerId, carId = ViewBag.CarId, jobId = Model.JobId }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-default" })
</p>
