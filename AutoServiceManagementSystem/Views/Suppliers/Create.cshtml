@model AutoServiceManagementSystem.ViewModels.Suppliers.CreateSupplierViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Add a new supplier</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
