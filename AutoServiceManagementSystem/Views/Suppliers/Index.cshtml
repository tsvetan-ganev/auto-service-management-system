@model IEnumerable<AutoServiceManagementSystem.Models.Supplier>

@{
    ViewBag.Title = "Suppliers";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiscountPercentage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WebsiteUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiscountPercentage)
                </td>
                <td>
                    <!-- Attributes that should be added: target = _blank -->
                    @Html.DisplayFor(modelItem => item.WebsiteUrl)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.SupplierId },
                        new { @class = "btn btn-primary" })
                    @Html.ActionLink("Details", "Details", new { id = item.SupplierId },
                        new { @class = "btn btn-default" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.SupplierId },
                        new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>


</table>
