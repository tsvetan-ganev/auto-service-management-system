@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Auto service management system</h1>
    <p class="lead">This application will help you keep track of your clients and their cars' repairs history.</p>
</div>

<div id="daily-supplier" class="row">
    @Ajax.ActionLink("Click to see today's supplier.",
            "DailySupplier",
                null,
                new AjaxOptions
                {
                    UpdateTargetId = "daily-supplier",
                    InsertionMode = InsertionMode.Replace,
                    HttpMethod = "GET"
                },
                new { @class = "btn btn-primary" })
</div>

@section Scripts{
    <script src="~/Scripts/Vendor/jquery.unobtrusive-ajax.min.js"></script>
}